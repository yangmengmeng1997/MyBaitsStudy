<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.StudentDao">
    <select id="queryStudents" resultMap="studentMap">
       select id,name,email,age from student order by id
    </select>

    <!--更换全限定名称为别名-->
    <select id="queryStudentById" parameterType="java.lang.Integer" resultType="student">
        select id,name,email,age from student where id=#{id}
    </select>

    <select id="queryMultiParam" resultType="org.example.enity.student">
        select id,name,email,age from student where name=#{myname} or age=#{myage}
    </select>

    <select id="queryObject" resultType="org.example.enity.student">
        select id,name,email,age from student where name=#{paramName} or age=#{paramAge}
    </select>

    <insert id="insertStudent" >
        insert into student values(#{id},#{name},#{email},#{age})
    </insert>

    <select id="countStudent" resultType="int">
           select count(*) from student
    </select>

    <select id="selctMapById" resultType="java.util.HashMap">
        select id,name from student where id=#{stuid}
    </select>

    <!--定义resultMap来映射属性名和列名 主键用id标签，非主键用result-->
    <resultMap id="studentMap" type="org.example.enity.student">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="email" property="email"></result>
        <result column="age" property="age"></result>
    </resultMap>
</mapper>