<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.StudentDao">
    <!--sql代码片段确保可以复用-->
    <sql id="commonsql">
        select id,name,email,age from student
    </sql>


    <!--if的用法-->
    <select id="selectStudentIf" resultType="org.example.enity.Student">
        <include refid="commonsql"/>
        where
        <if test="name!=null and name !='' ">
            name=#{name}
        </if>
        <if test="age>0">
            and age>=#{age}
        </if>
    </select>

    <!--where语法-->
    <select id="selectStudentWhere" resultType="org.example.enity.Student">
        select id,name,email,age from student
        <where>
            <if test="name!=null and name !='' ">
                name=#{name}
            </if>
            <if test="age>0">
                and age>=#{age}
            </if>
        </where>
    </select>
    
    
    <!--forEach代码-->
    <select id="selectStudentForEach" resultType="org.example.enity.Student">
        select * from student
        where id in
        <!--遍历id选出list-->
        <foreach collection="list" item="myid" open="(" close=")" separator="," >
               #{myid}
        </foreach>
    </select>

    <!--forEach代码，传入数据对象,取得对应属性对象值-->
    <select id="selectStudentForEachObject" resultType="org.example.enity.Student">
        <include refid="commonsql"/>
        where name in
        <foreach collection="list" item="mystu" open="(" close=")" separator=",">
            #{mystu.name}
        </foreach>
    </select>
</mapper>